<div class="container">
  <div class="text-center">
    <h1>New Game</h1>
  </div>
<!-- Display of the LetterGrid -->
  <div class="card my-4">
    <div class="card-header">
      Here is your grid, let's play !
    </div>
    <div class="card-body">
      <blockquote class="blockquote mb-0 text-center">
        <div class="d-flex justify-content-between">
          <% @letters.each do |letter| %>
          <div class="border border-primary px-1">
          <%= letter %>
          </div>
          <% end %>
        </div>
      </blockquote>
    </div>
  </div>
<!-- Input for user to enter their answer -->
<!-- (with Submit Button) -->
  <form class="form-inline" action="/score" method="post">
    <p style="font-weight: bold">
      Please, enter your answer here:
    </p>
    <div class="form-group mx-sm-3 mb-2">
      <label for="inputPassword2" class="sr-only"></label>
      <input type="text" name="answer" class="form-control" id="inputPassword2" placeholder="Enter Word Here..">
    </div>
    <button type="submit" class="btn btn-primary mb-2">Play!</button>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
  </form>

  <div class="ml-2">
    <%= link_to '< Home >', home_path%>
  </div>
</div>
